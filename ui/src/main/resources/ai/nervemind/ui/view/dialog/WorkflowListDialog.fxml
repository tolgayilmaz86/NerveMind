<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<!--
    Workflow List Dialog - Select a workflow to open.
    Uses CSS classes from dialog.css and variables.css
-->
<HBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ai.nervemind.ui.view.dialog.WorkflowListDialogController"
      spacing="10"
      styleClass="workflow-list-dialog"
      stylesheets="@../../styles/variables.css, @../../styles/dialog.css">
    
    <padding>
        <Insets topRightBottomLeft="10"/>
    </padding>
    
    <!-- Left Pane: Workflow List -->
    <VBox spacing="5">
        <Label text="Workflows:" styleClass="workflow-list-dialog__section-label"/>
        
        <ListView fx:id="workflowListView" 
                  prefWidth="400" 
                  prefHeight="300"
                  styleClass="workflow-list-dialog__list"/>
        
        <Button fx:id="deleteButton" 
                text="Delete Selected"
                styleClass="workflow-list-dialog__delete-button"
                onAction="#handleDelete"
                managed="${controller.showDeleteButton}"
                visible="${controller.showDeleteButton}"/>
    </VBox>
    
    <!-- Right Pane: Details -->
    <VBox spacing="5" styleClass="workflow-list-dialog__details-pane" prefWidth="300">
        <Label text="Details:" styleClass="workflow-list-dialog__section-label"/>
        
        <Label fx:id="detailsLabel" 
               wrapText="true"
               prefWidth="280"
               styleClass="workflow-list-dialog__details-text"/>
    </VBox>
</HBox>
