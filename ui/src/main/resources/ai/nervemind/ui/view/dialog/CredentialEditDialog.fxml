<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ai.nervemind.ui.view.dialog.CredentialEditController"
      styleClass="edit-dialog" spacing="15" prefWidth="450">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    
    <!-- Title -->
    <Label fx:id="titleLabel" text="Add Credential" styleClass="edit-dialog__title"/>
    
    <!-- Form Grid -->
    <GridPane hgap="15" vgap="15" styleClass="edit-dialog__grid">
        <columnConstraints>
            <ColumnConstraints minWidth="100" halignment="RIGHT"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="250"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
            <RowConstraints/>
        </rowConstraints>
        
        <!-- Name -->
        <Label text="Name:" styleClass="edit-dialog__label" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="nameField" promptText="e.g., OpenAI API Key" 
                   styleClass="edit-dialog__input" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
        
        <!-- Type -->
        <Label text="Type:" styleClass="edit-dialog__label" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <ComboBox fx:id="typeCombo" maxWidth="Infinity" 
                  styleClass="edit-dialog__combobox" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
        
        <!-- Data -->
        <Label fx:id="dataLabel" text="Credential Data:" styleClass="edit-dialog__label" 
               GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <HBox spacing="10" alignment="CENTER_LEFT" GridPane.rowIndex="2" GridPane.columnIndex="1">
            <StackPane HBox.hgrow="ALWAYS">
                <PasswordField fx:id="dataField" promptText="Enter API key or password..." 
                               styleClass="edit-dialog__input"/>
                <TextField fx:id="dataVisibleField" promptText="Enter API key or password..." 
                           styleClass="edit-dialog__input" visible="false" managed="false"/>
            </StackPane>
            <CheckBox fx:id="showDataCheckbox" text="Show" styleClass="edit-dialog__checkbox"/>
        </HBox>
        
        <!-- Info Label -->
        <Label text="âš  Credentials are encrypted and stored securely." 
               styleClass="edit-dialog__info-label" wrapText="true"
               GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    </GridPane>
    
    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button fx:id="cancelButton" text="Cancel" onAction="#handleCancel" 
                styleClass="edit-dialog__button-secondary"/>
        <Button fx:id="saveButton" text="Create" onAction="#handleSave" 
                styleClass="edit-dialog__button-primary"/>
    </HBox>
</VBox>
