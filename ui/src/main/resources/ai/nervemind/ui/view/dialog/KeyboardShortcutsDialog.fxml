<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!--
    Keyboard Shortcuts Dialog - Shows all available keyboard shortcuts.
    Uses CSS classes from dialog.css and variables.css
-->
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ai.nervemind.ui.view.dialog.KeyboardShortcutsController"
      spacing="15"
      prefWidth="500"
      prefHeight="600"
      styleClass="shortcuts-dialog"
      stylesheets="@../../styles/variables.css, @../../styles/dialog.css">
    
    <padding>
        <Insets topRightBottomLeft="20"/>
    </padding>
    
    <!-- Header -->
    <Label text="Keyboard Shortcuts" styleClass="shortcuts-dialog__title"/>
    
    <!-- Scrollable Content -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" styleClass="shortcuts-dialog__scroll">
        <VBox spacing="20">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            
            <!-- File Section -->
            <VBox spacing="8">
                <Label text="FILE" styleClass="shortcuts-dialog__section-title"/>
                <GridPane hgap="20" vgap="8" styleClass="shortcuts-dialog__grid">
                    <Label text="Ctrl+N" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="New Workflow" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Ctrl+O" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Open Workflow" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Ctrl+S" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Save" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Ctrl+Shift+S" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label text="Save As" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Alt+F4" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label text="Exit" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Edit Section -->
            <VBox spacing="8">
                <Label text="EDIT" styleClass="shortcuts-dialog__section-title"/>
                <GridPane hgap="20" vgap="8" styleClass="shortcuts-dialog__grid">
                    <Label text="Ctrl+Z" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Undo" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Ctrl+Y" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Redo" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Ctrl+X" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Cut" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Ctrl+C" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label text="Copy" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Ctrl+V" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label text="Paste" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Delete" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label text="Delete Selected" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                    
                    <Label text="Ctrl+A" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="6"/>
                    <Label text="Select All" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="6"/>
                    
                    <Label text="Escape" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="7"/>
                    <Label text="Deselect All" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="7"/>
                    
                    <Label text="Ctrl+E" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="8"/>
                    <Label text="Export Workflow" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="8"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- View Section -->
            <VBox spacing="8">
                <Label text="VIEW" styleClass="shortcuts-dialog__section-title"/>
                <GridPane hgap="20" vgap="8" styleClass="shortcuts-dialog__grid">
                    <Label text="Ctrl++" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Zoom In" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Ctrl+-" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Zoom Out" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Ctrl+0" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Reset Zoom (100%)" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Ctrl+1" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label text="Fit to Window" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Ctrl+`" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label text="Execution Console" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    
                    <Label text="Ctrl+H" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="5"/>
                    <Label text="Execution History" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Workflow Section -->
            <VBox spacing="8">
                <Label text="WORKFLOW" styleClass="shortcuts-dialog__section-title"/>
                <GridPane hgap="20" vgap="8" styleClass="shortcuts-dialog__grid">
                    <Label text="F5" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Run Workflow" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Shift+F5" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Stop Execution" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                </GridPane>
            </VBox>
            
            <Separator/>
            
            <!-- Canvas Section -->
            <VBox spacing="8">
                <Label text="CANVAS" styleClass="shortcuts-dialog__section-title"/>
                <GridPane hgap="20" vgap="8" styleClass="shortcuts-dialog__grid">
                    <Label text="Ctrl+Click" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                    <Label text="Multi-select nodes" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                    
                    <Label text="Drag" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                    <Label text="Move selected nodes" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                    
                    <Label text="Right-click" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                    <Label text="Context menu" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    
                    <Label text="Scroll Wheel" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                    <Label text="Zoom in/out" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                    
                    <Label text="Middle Mouse Drag" styleClass="shortcuts-dialog__key" GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                    <Label text="Pan canvas" styleClass="shortcuts-dialog__action" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                </GridPane>
            </VBox>
        </VBox>
    </ScrollPane>
    
    <!-- Footer with Close Button -->
    <HBox alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" 
                text="Close" 
                styleClass="shortcuts-dialog__close-button"
                onAction="#handleClose"/>
    </HBox>
</VBox>
