<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Priority?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<!--
    About Dialog - Shows application information, logo, and links.
    Uses CSS classes from dialog.css and variables.css
-->
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="ai.nervemind.ui.view.dialog.AboutDialogController"
      spacing="20"
      styleClass="about-dialog"
      stylesheets="@../../styles/variables.css, @../../styles/dialog.css">
    
    <padding>
        <Insets topRightBottomLeft="30"/>
    </padding>
    
    <!-- Header: Logo and Title -->
    <HBox spacing="20" alignment="CENTER_LEFT">
        <!-- Logo -->
        <ImageView fx:id="logoImageView" 
                   fitWidth="80" 
                   fitHeight="80" 
                   preserveRatio="true"/>
        
        <!-- Title and Description -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label fx:id="appNameLabel" 
                   styleClass="about-dialog__app-name"/>
            
            <Label fx:id="descriptionLabel" 
                   styleClass="about-dialog__description"/>
            
            <Label fx:id="versionLabel" 
                   styleClass="about-dialog__version"/>
        </VBox>
    </HBox>
    
    <!-- Information Section -->
    <VBox spacing="10" alignment="CENTER_LEFT">
        <Label fx:id="authorLabel" 
               styleClass="about-dialog__info"/>
        
        <Label fx:id="licenseLabel" 
               styleClass="about-dialog__info"/>
        
        <!-- Project Link -->
        <HBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Project:" 
                   styleClass="about-dialog__info"/>
            <Hyperlink fx:id="projectLink" 
                       styleClass="about-dialog__link"
                       onAction="#handleProjectLinkClick"/>
        </HBox>
    </VBox>
    
    <!-- Footer with Close Button -->
    <HBox alignment="CENTER_RIGHT">
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="closeButton" 
                text="Close" 
                styleClass="about-dialog__close-button"
                onAction="#handleClose"/>
    </HBox>
</VBox>
